<mvc:View controllerName="masterindirectos.controller.DetailsControllers.Dashboard"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:t="sap.ui.table" height="100%"
    xmlns:vn="masterindirectos.control"
    xmlns:core="sap.ui.core"
    xmlns:l="sap.ui.layout">

    <VBox height="100%" width="100%" class="sapUiSizeCompact">

        <l:Grid defaultSpan="L4 M6 S12" vSpacing="0" class="sapUiSmallMarginTop">
            <t:Table rows="{oModelCosteTotal>/}" visibleRowCount="1" selectionMode="None" class="technicalTable yellowHeader">
                <t:columns>
                    <t:Column hAlign="Center">
                        <Label text="{i18n>dbCosteTotalEjecutado}" />
                        <t:template>
                            <Text text="{oModelCosteTotal>ejecutado}" />
                        </t:template>
                    </t:Column>
                    <t:Column hAlign="Center">
                        <Label text="{i18n>dbCosteTotalPendiente}" />
                        <t:template>
                            <Text text="{oModelCosteTotal>pendiente}" />
                        </t:template>
                    </t:Column>
                    <t:Column hAlign="Center">
                        <Label text="{i18n>dbCosteTotalTotal}" />
                        <t:template>
                            <Text text="{oModelCosteTotal>total}" />
                        </t:template>
                    </t:Column>
                </t:columns>
            </t:Table>

            <t:Table rows="{oModelDataObraNeta>/}" visibleRowCount="1" selectionMode="None" class="technicalTable yellowHeader">
                <t:columns>
                    <t:Column hAlign="Center">
                        <Label text="{i18n>dbObraEjecutadaNetaEjecutado}" />
                        <t:template>
                            <Text text="{oModelDataObraNeta>ejecutado}" />
                        </t:template>
                    </t:Column>
                    <t:Column hAlign="Center">
                        <Label text="{i18n>dbObraEjecutadaNetaPendiente}" />
                        <t:template>
                            <Text text="{oModelDataObraNeta>pendiente}" />
                        </t:template>
                    </t:Column>
                    <t:Column hAlign="Center">
                        <Label text="{i18n>dbObraEjecutadaNetaTotal}" />
                        <t:template>
                            <Text text="{oModelDataObraNeta>total}" />
                        </t:template>
                    </t:Column>
                </t:columns>
            </t:Table>

            <t:Table rows="{oModelCosteDirecto>/}" visibleRowCount="1" selectionMode="None" class="technicalTable yellowHeader">
                <t:columns>
                    <t:Column hAlign="Center">
                        <Label text="{i18n>dbCosteDirectoEjecutado}" />
                        <t:template>
                            <Text text="{oModelCosteDirecto>ejecutado}" />
                        </t:template>
                    </t:Column>
                    <t:Column hAlign="Center">
                        <Label text="{i18n>dbCosteDirectoPendiente}" />
                        <t:template>
                            <Text text="{oModelCosteDirecto>pendiente}" />
                        </t:template>
                    </t:Column>
                    <t:Column hAlign="Center">
                        <Label text="{i18n>dbCosteDirectoTotal}" />
                        <t:template>
                            <Text text="{oModelCosteDirecto>total}" />
                        </t:template>
                    </t:Column>
                </t:columns>
            </t:Table>
        </l:Grid>
        <HBox height="20%" justifyContent="SpaceAround" class="sapUiSmallMarginTop">

            <vn:GraphicPie id="idGraphicPieCosteTotal" data="{oModelTartas>/datasets/0}" labels="{oModelTartas>/labels}" title="{i18n>dbCosteTotal}"/>

            <vn:GraphicPie id="idGraphicPieObraNeta" data="{oModelTartas>/datasets/1}" labels="{oModelTartas>/labels}" title="{i18n>dbObraEjecutadaNeta}"/>

            <vn:GraphicPie id="idGraphicPieCosteDirecto" data="{oModelTartas>/datasets/2}" labels="{oModelTartas>/labels}" title="{i18n>dbCosteDirecto}"/>

        </HBox>



        <t:Table class="sapUiMediumMarginBeginEnd" selectionMode="None" rowHeight="20" rows="{oModelDashboard>/Dashboard}" visibleRowCount="6">
            <t:columns>

                <t:Column>
                    <Label text="{i18n>conceptoTable}" design="Bold" />
                    <t:template>
                        <Text text="{oModelDashboard>concepto}" />
                    </t:template>
                </t:Column>
                <t:Column>
                    <Label text="{i18n>impEject}" design="Bold" />
                    <t:template>
                        <Text text="{oModelDashboard>impEjec}" textAlign="End" width="100%" />
                    </t:template>
                </t:Column>
                <t:Column>
                    <Label text="{i18n>impPend}" design="Bold" />
                    <t:template>
                        <Text text="{oModelDashboard>impPend}" textAlign="End" width="100%" />
                    </t:template>
                </t:Column>
                <t:Column>
                    <Label text="{i18n>ImpTot}" design="Bold" />
                    <t:template>
                        <Text text="{oModelDashboard>impTot}" textAlign="End" width="100%" />
                    </t:template>
                </t:Column>
                <t:Column>
                    <Label text="{i18n>totCost%}" design="Bold" />
                    <t:template>
                        <Text text="{oModelDashboard>percTotCost}" textAlign="End" width="100%" />
                    </t:template>
                </t:Column>
                <t:Column>
                    <Label text="{i18n>totCD%}" design="Bold" />
                    <t:template>
                        <Text text="{oModelDashboard>percTotalCD}" textAlign="End" width="100%" />
                    </t:template>
                </t:Column>
                <t:Column>
                    <Label text="{i18n>totVentas%}" design="Bold" />
                    <t:template>

                        <Text text="{oModelDashboard>percTotVenta}" textAlign="End" width="100%" />
                    </t:template>
                </t:Column>
            </t:columns>
        </t:Table>

        <VBox height="100%">

            <vn:GraphicBar data="{oModelGraphicBar>/}" height="100%" barThickness="5" borderRadius="0" grouped="true">
                <vn:layoutData>
                    <FlexItemData growFactor="1"/>
                </vn:layoutData>

            </vn:GraphicBar>
        </VBox>
    </VBox>
</mvc:View>
<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core">
    <Popover title="{i18n>popoverTitle}" placement="Right" contentWidth="180px">
        <content>
            <VBox class="sapUiTinyMargin">
                <Label text="{i18n>labelQuantity}" />
                
                <Input id="itemQuantityInput" 
                       type="Number" 
                       value="1" 
                       textAlign="Center" 
                       class="sapUiSmallMarginBottom" />
                
                <Button text="{i18n>btnCreate}" 
                        icon="sap-icon://add" 
                        type="Emphasized"
                        press="onAddPress" 
                        width="100%" 
                        class="sapUiTinyMarginBottom" />

                <Button text="{i18n>btnClose}" 
                        icon="sap-icon://decline" 
                        press="onCloseContextMenu" 
                        width="100%" />
            </VBox>
        </content>
    </Popover>
</core:FragmentDefinition>